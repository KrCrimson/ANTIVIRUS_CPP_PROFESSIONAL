{
  "name": "antivirus-frontend",
  "version": "1.0.0",
  "description": "Antivirus Professional - Electron Frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "webpack --mode=production",
    "build-dev": "webpack --mode=development",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "antivirus",
    "security",
    "electron",
    "react",
    "cybersecurity"
  ],
  "author": "KrCrimson",
  "license": "MIT",
  "homepage": "./",
  "dependencies": {
    "axios": "^1.12.2",
    "chart.js": "^4.5.1",
    "date-fns": "^2.29.0",
    "framer-motion": "^9.0.0",
    "lodash": "^4.17.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.7.0",
    "react-router-dom": "^6.8.0",
    "socket.io-client": "^4.6.0",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@types/node": "^18.11.0",
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.0",
    "css-loader": "^6.7.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.7.0"
  },
  "build": {
    "appId": "com.krcrimson.antivirus",
    "productName": "Antivirus Professional",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
